<Page
    x:Class="kpn.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:kpn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Kamień Papier Nożyce" FontSize="30"/>
            <StackPanel Orientation="Horizontal" Margin="80,0,0,0">
                <AppBarButton Name="kamienPrzeciwnik" Icon="Contact"/>
                <AppBarButton Name="papierPrzeciwnik" Icon="Admin"/>
                <AppBarButton Name="nozycePrzeciwnik" Icon="Delete"/>
            </StackPanel>
            <StackPanel Margin="200">
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="80,0,0,0">
                <AppBarButton Name="kamienJa" Icon="Contact"/>
                <AppBarButton Name="papierJa" Icon="Admin"/>
                <AppBarButton Name="nozyceJA" Icon="Delete"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <AppBarButton Name="pomoc" Icon="Help"/>
                <AppBarButton Name="oProgramie" Icon="Camera"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
